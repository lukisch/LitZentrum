{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://litzentrum.local/schemas/litask.json",
  "title": "LiTask",
  "description": "Aufgaben-Schema für Literaturquellen",
  "type": "object",
  "properties": {
    "schema_version": {
      "type": "string",
      "default": "1.0.0"
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Eindeutige ID der Aufgabe"
          },
          "title": {
            "type": "string",
            "description": "Aufgaben-Titel"
          },
          "description": {
            "type": ["string", "null"],
            "description": "Ausführliche Beschreibung"
          },
          "status": {
            "type": "string",
            "enum": ["open", "in_progress", "done", "cancelled"],
            "default": "open"
          },
          "priority": {
            "type": "string",
            "enum": ["low", "normal", "high", "urgent"],
            "default": "normal"
          },
          "due_date": {
            "type": ["string", "null"],
            "format": "date",
            "description": "Fälligkeitsdatum"
          },
          "page": {
            "type": ["integer", "null"],
            "description": "Bezogene Seitenzahl"
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" },
            "default": []
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "completed_at": {
            "type": ["string", "null"],
            "format": "date-time"
          }
        },
        "required": ["id", "title", "status", "created_at"]
      }
    }
  },
  "required": ["schema_version", "tasks"]
}
