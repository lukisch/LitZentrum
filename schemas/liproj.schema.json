{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://litzentrum.local/schemas/liproj.json",
  "title": "LiProj",
  "description": "Projekt-Konfiguration für LitZentrum",
  "type": "object",
  "properties": {
    "schema_version": {
      "type": "string",
      "default": "1.0.0"
    },
    "name": {
      "type": "string",
      "description": "Projektname"
    },
    "description": {
      "type": ["string", "null"],
      "description": "Projektbeschreibung"
    },
    "citation_style": {
      "type": "string",
      "enum": ["apa", "mla", "chicago", "din", "harvard"],
      "default": "apa",
      "description": "Standard-Zitationsstil"
    },
    "language": {
      "type": "string",
      "default": "de",
      "description": "Projektsprache"
    },
    "sources_folder": {
      "type": "string",
      "default": "Quellen",
      "description": "Ordnername für Quellen"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["schema_version", "name", "created_at"]
}
