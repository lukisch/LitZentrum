{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://litzentrum.local/schemas/liquote.json",
  "title": "LiQuote",
  "description": "Zitate-Schema f√ºr Literaturquellen",
  "type": "object",
  "properties": {
    "schema_version": {
      "type": "string",
      "default": "1.0.0"
    },
    "quotes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Eindeutige ID des Zitats"
          },
          "type": {
            "type": "string",
            "enum": ["direct", "indirect", "paraphrase"],
            "default": "direct",
            "description": "Zitat-Typ: direkt, indirekt, Paraphrase"
          },
          "text": {
            "type": "string",
            "description": "Zitat-Text"
          },
          "page": {
            "type": ["integer", "null"],
            "minimum": 1,
            "description": "Seitenzahl"
          },
          "page_end": {
            "type": ["integer", "null"],
            "minimum": 1,
            "description": "End-Seitenzahl (bei mehrseitigen Zitaten)"
          },
          "comment": {
            "type": ["string", "null"],
            "description": "Eigener Kommentar zum Zitat"
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" },
            "default": []
          },
          "used_in": {
            "type": "array",
            "items": { "type": "string" },
            "default": [],
            "description": "Wo wurde das Zitat verwendet (z.B. Kapitel)"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["id", "text", "created_at"]
      }
    }
  },
  "required": ["schema_version", "quotes"]
}
